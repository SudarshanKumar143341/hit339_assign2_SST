@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";

}


<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-7">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div id="registering">
                <div class="form-group">
                    <label asp-for="Input.Fname"></label>
                    <input asp-for="Input.Fname" class="form-control" />
                    <span asp-validation-for="Input.Fname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Lname"></label>
                    <input asp-for="Input.Lname" class="form-control" />
                    <span asp-validation-for="Input.Lname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Age"></label>
                    <input asp-for="Input.Age" class="form-control" />
                    <span asp-validation-for="Input.Age" class="text-danger"></span>
                </div>
            </div>
            <h5>Address: </h5>
            <div id="registering">
                <div class="form-group">
                    <label asp-for="Input.StreetNumber"></label>
                    <input asp-for="Input.StreetNumber" class="form-control" />
                    <span asp-validation-for="Input.StreetNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.StreetName"></label>
                    <input asp-for="Input.StreetName" class="form-control" />
                    <span asp-validation-for="Input.StreetName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Suburb"></label>
                    <input asp-for="Input.Suburb" class="form-control" />
                    <span asp-validation-for="Input.Suburb" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Country"></label>
                    <input asp-for="Input.Country" class="form-control" />
                    <span asp-validation-for="Input.Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Pincode"></label>
                    <input asp-for="Input.Pincode" class="form-control" />
                    <span asp-validation-for="Input.Pincode" class="text-danger"></span>
                </div>
            </div>
            <div id="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div id="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div id="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <br />
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
