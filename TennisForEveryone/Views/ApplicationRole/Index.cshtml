@model IEnumerable<TennisForEveryone.Models.ViewModel.RoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="top-buffer"></div>
<div class="panel panel-primary">
    <h2 class="panel-heading panel-head">Application Roles</h2>
    <a asp-action="CreateRole" asp-controller="Administration" class="btn btn-primary">Create Role</a>
    <div class="panel-body mt-3">
        <div class="top-buffer"></div>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>Role Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RoleName </td>
                        <td>
                            <a asp-action="EditRole" asp-controller="ApplicationRole" asp-route-id="@item.Id" class="btn btn-success">View details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
