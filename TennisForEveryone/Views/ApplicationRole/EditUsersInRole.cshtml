@model List<TennisForEveryone.Models.ViewModel.UserRoleViewModel>
@{
    ViewData["Title"] = "EditUsersInRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var roleId = ViewBag.roleId;
}


<form method="post">
    <div>
        <h3>Add or remove users from this roles</h3>
    </div>


    <div>
        <h3>User List</h3>
        <table>
            <thead>
                <tr>
                    <th> User Name</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].UserName" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                            @Model[i].UserName
                        </label>
                    </div>
                    }


                </tr>
            </tbody>

        </table>
        <div>
            <input type="submit" value="Update" />
            <a asp-action="EditRole"
               asp-route-Id="@roleId">Add Users or Remove Users</a>

        </div>
    </div>
</form>

